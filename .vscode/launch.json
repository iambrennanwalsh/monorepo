{
	"configurations": [
		{
			"name": "Node",
			"type": "node",
			"request": "launch",
			"cwd": "${fileDirname}",
			"args": ["${file}"],
			"skipFiles": ["<node_internals>/**"]
		},
		{
			"name": "TS-Node",
			"type": "node",
			"request": "launch",
			"runtimeArgs": [
				"--loader",
				"ts-node/esm",
				"--experimental-specifier-resolution=node"
			],
			"cwd": "${fileDirname}",
			"args": ["${file}"],
			"skipFiles": ["<node_internals>/**"]
		},
		{
			"name": "Jest (All Files)",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/jest"
		},
		{
			"name": "Jest (Current File)",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/jest",
			"args": ["${fileBasename}"]
		}
	]
}
