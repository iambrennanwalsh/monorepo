{
	"name": "@iambrennanwalsh/monorepo",
	"description": "A monorepo template.",
	"author": "Brennan Walsh <mail@brennanwal.sh> (https://brennanwal.sh)",
	"repository": "iambrennanwalsh/monorepo",
	"license": "MIT",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "ts-node ./esbuild.config.ts run",
		"clean": "git clean -Xdf", 
		"format": "prettier --write . --ignore-path .gitignore",
		"init": "pnpm install",
		"lint": "eslint . --ignore-path .gitignore",
		"test": "jest",
		"typecheck": "lerna exec -- tsc --noEmit",
		"commit": "git commit -a",
		"changeset": "changeset add",
		"version": "changeset version",
		"publish": "changeset publish"
	},
	"dependencies": {
		"@types/jest": "^27.4.1",
		"@types/node": "^17.0.23",
		"@typescript-eslint/eslint-plugin": "^5.19.0",
		"@typescript-eslint/parser": "^5.19.0",
		"@changesets/cli": "^2.22.0",
		"@changesets/changelog-github": "^0.4.4",
		"esbuild": "^0.14.36",
		"eslint": "^8.13.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jest": "^26.1.4",
		"eslint-plugin-testing-library": "^5.3.1",
		"jest": "^27.5.1",
		"lerna": "^4.0.0",
		"prettier": "^2.6.2",
		"ts-jest": "^27.1.4",
		"ts-node": "^10.7.0",
		"typescript": "^4.5.5"
	}
}
