{
	"name": "@iambrennanwalsh/monorepo",
	"description": "A pure esm monorepo template.",
	"author": "Brennan Walsh <mail@brennanwal.sh> (https://brennanwal.sh)",
	"repository": "iambrennanwalsh/monorepo",
	"license": "MIT",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "pnpm -r exec vite build",
		"changeset": "changeset add",
		"clean": "git clean -Xdf",
		"format": "prettier --write . --ignore-path .gitignore",
		"init": "nvm use && pnpm install",
		"lint": "eslint . --ignore-path .gitignore --cache --cache-location var/eslint/cache",
		"test": "jest",
		"tsc": "pnpm -r exec tsc --noEmit",
		"version": "changeset version",
		"publish": "changeset publish"
	},
	"dependencies": {
		"@testing-library/jest-dom": "^5.16.1",
		"@testing-library/react": "^12.1",
		"@typescript-eslint/eslint-plugin": "^5.19.0",
		"@typescript-eslint/parser": "^5.19.0",
		"@changesets/cli": "^2.22.0",
		"@changesets/changelog-github": "^0.4.4",
		"vite": "^2.9.2",
		"vite-plugin-dts": "^1.1.0",
		"eslint": "^8.13.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jest": "^26.1.4",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-react": "^7.29.4",
		"eslint-plugin-react-hooks": "^4.4.0",
		"eslint-plugin-testing-library": "^5.5.0",
		"jest": "^28.1.0",
		"prettier": "^2.6.2",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"ts-jest": "^28.0.2",
		"ts-node": "^10.7.0",
		"typescript": "^4.6"
	},
	"devDependencies": {
		"@types/jest": "^27.5.1",
		"@types/node": "^17.0.23",
		"@types/react": "^17.0.38",
		"@types/react-dom": "^17.0.11"
	}
}
